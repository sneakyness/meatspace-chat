extend layout

block content
  form(method='post', id='composer-form')
    .message-content
      input(name='message', id='composer-message', class='input', maxlength='250', autocomplete='off', placeholder=t('messagePrompt'))
      input(type='hidden', name='_csrf', value='#{csrf}')
      #composer-blocker.hidden
        span= t('pleaseWait')
  #counter 250

block terms
  #terms
    p= t('termsAndConditions')
    p
      a(href='/terms')= t('termsLink')
    p
      a(href='javascript:;', class='agree', id='tnc-accept')= t('iAccept')
      a(href='http://www.nyan.cat', class='agree')= t('iDoNotAccept')
